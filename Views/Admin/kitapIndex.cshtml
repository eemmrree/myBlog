@using TravelTrip.Models.sınıflar
@model List<kitaplar>
@{
    ViewBag.Title = "kitapIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Kitap Listesi</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.kitapBaslik</td>
            <td><a href="/Admin/kitapSil/@x.ID" class=" btn btn-danger">Sil </a></td>
            <td><a href="/Admin/kitapGetir/@x.ID" class=" btn btn-warning">Güncelle</a></td>
            <td><a href="#" class=" btn btn-default">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Admin/yeniKitap/" class="btn btn-primary">Yeni Kitap</a>

