<!DOCTYPE HTML>
<html>
<head>
    <title>Personal Blog a Blogging Category Flat Bootstarp  Responsive Website Template | Single :: w3layouts</title>
    <link href="~/css/web2bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/css/web2style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script>
        function clickCounter() {
            if (typeof (Storage) !== "undefined") {
                if (localStorage.clickcount) {
                    localStorage.clickcount = Number(localStorage.clickcount) + 1;
                } else {
                    localStorage.clickcount = 1;
                }
                document.getElementById("result").innerHTML = "Bu yazıyı " + localStorage.clickcount + " kişi beğendi";
            } else {
                document.getElementById("result").innerHTML = "Yeter...";
            }
        }
    </script>

</head>
<body>
    <div class="header">
    </div>
  
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">

                <div class="single-grid">
                    @foreach (var x in Model.deger1)
                    {
                        <img src="@x.BlogImage" alt="" style="margin-bottom:20px" />
                        <h2>@x.Baslik</h2>
                        <p>
                            @x.Aciklama
                        </p>
                    }
                </div>
                <p><button onclick="clickCounter()" class="btn btn-primary" type="button" style="text-align:center">Beğen</button></p>
                <br />
                <div id="result"></div>
                @foreach (var y in Model.deger2)
                {
                    <ul class="comment-list">

                        <li>
                            <img src="~/images/avatar.png" class="img-responsive" alt="">
                            <div class="desc">
                                <p>@y.KullaniciAdi: @y.Yorum</p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                }
                @Html.Action("yorumYap", "Blog")
            </div>

           
        </div>
        
    </div>
   
    </body>
</html>





