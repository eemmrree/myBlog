@using TravelTrip.Models.sınıflar
@model List<blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<!DOCTYPE HTML>
<html>

<body>
    
    
    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Burası da Ne</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/images/book3.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Kitaplar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/images/video.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Filmler ve Diziler</p>
                            </div>
                            <div class="clear"></div>
                        </div>

                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/images/music-note.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Müzikler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/images/chip.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Teknoloji</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider" style="width:650px; height:365px">
                            <ul class="rslides" id="slider1">
                                @foreach (var x in Model)
                                {
                                <li><img src=@x.BlogImage alt=""></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h3>Bloğuma Hoşgeldiniz</h3>
                    <p>Benzersiz ve ilgi çekici yazılarımla dolu olan kişisel projem Bir Suskun Meczup platformuna hoş geldiniz. Sitemde size sunduklarıma göz atın. Bakarsınız Bir Suskun Meczup sizin için de bir tutku haline gelir. Ve yorum ve önerilerinizi her daim beklerim. Keyifli okumalar.</p>
                </div>
                @Html.Action("Partial1", "Default")
                <div class="grids">
                    <div class="box1">
                            @Html.Action("Partial3", "Default")
                        @Html.Action("Partial4", "Default")
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>


